<Window x:Class="Voice_Coding.StatusBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="StatusBar" Height="25" Width="800" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Cursor="Hand" WindowStyle="None" Foreground="{x:Null}" AllowsTransparency="True">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
            <GradientStop Color="#FF373737" Offset="0.801"/>
            <GradientStop Color="#00320D0D" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="359*"/>
            <ColumnDefinition Width="441*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="toggleBtn" Content=""  HorizontalAlignment="Left" Margin="5.598,4.166,0,4.833" VerticalAlignment="Center" Width="16" UseLayoutRounding="False" Height="16" Background="#FF22D069" BorderBrush="#FF5A66C0" BorderThickness="1" Click="toggleBtn_Click"/>
        <Label x:Name="status" Content="Command" HorizontalAlignment="Left" Margin="23,-3,0,0" VerticalAlignment="Top" Foreground="#FFDFDFDF" Height="27" Width="312" FontSize="14"/>
    </Grid>
</Window>
