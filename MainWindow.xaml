<Window x:Name="Voice_Coding" x:Class="Voice_Coding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Voice_Coding"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="100" Width="200" ResizeMode="NoResize" WindowStyle="None" Background="#FF9A9A9A" WindowStartupLocation="Manual" Left="0" Top="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Visibility="Hidden" ShowInTaskbar="False">
    <Grid>
        <ComboBox x:Name="LanguageSelect" HorizontalAlignment="Left" Margin="12,34,0,0" VerticalAlignment="Top" Width="176">
            <ComboBoxItem Content="CPP" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem Content="C" IsSelected="False"></ComboBoxItem>
            <ComboBoxItem Content="C#" IsSelected="False"></ComboBoxItem>
        </ComboBox>
        <Rectangle Fill="#FF313131" HorizontalAlignment="Center" Height="21" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="CloseBtn" Content="X" HorizontalAlignment="Left" Margin="181,2,0,0" VerticalAlignment="Top" Width="18" Height="18" Background="#FFD14949" Foreground="#FFD7D7D7" BorderBrush="#FFA6A6A6" Click="HideToTray"/>
        <Label Content="Voice Coding" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFD6D6D6" Margin="1,-3,0,0"/>
    </Grid>
</Window>
